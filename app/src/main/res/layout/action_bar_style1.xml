<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/buttonBlue_1"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/action_bar_style1_left"
        android:layout_width="50dp"
        android:layout_height="35dp"
        app:srcCompat="@mipmap/back_white" />

    <TextView
        android:id="@+id/action_bar_style1_center"
        style="@style/Kartina_text_Style1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="我的" />

    <ImageView
        android:id="@+id/action_bar_style1_right"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        app:srcCompat="@mipmap/more_white" />
</LinearLayout>